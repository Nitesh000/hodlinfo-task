<%- include("partials/header") -%>

<section class="grid grid-cols-3 gap-3 mt-5">
  <div class="flex justify-between items-center px-32">
    <div class="flex justify-center items-center flex-col">
      <h3 class="text-[40px] font-medium text-teal-500">0.57%</h3>
      <p class="text-[20px] font-light text-gray-500">5 Mins</p>
    </div>

    <div class="flex justify-center items-center flex-col">
      <h3 class="text-[40px] font-medium text-teal-500">0.57%</h3>
      <p class="text-[20px] font-light text-gray-500">5 Mins</p>
    </div>
  </div>

  <div class="flex flex-col justify-center items-center">
    <div class="flex justify-center itemx-center flex-col gap-4">
      <p class="text-[28px] font-light text-gray-500 mx-auto">Best Price to Trade</p>
      <h2 class="text-8xl font-normal dark:text-white text-black mx-auto">₹ 36,00,000</h2>
      <p class="text-[20px] font-light text-gray-500 mx-auto">Averge BTC/INR net price including commission</p>
    </div>
  </div>


  <div class="flex justify-between items-center px-32">
    <div class="flex justify-center items-center flex-col">
      <h3 class="text-[40px] font-medium text-teal-500">0.57%</h3>
      <p class="text-[20px] font-light text-gray-500">5 Mins</p>
    </div>

    <div class="flex justify-center items-center flex-col">
      <h3 class="text-[40px] font-medium text-teal-500">0.57%</h3>
      <p class="text-[20px] font-light text-gray-500">5 Mins</p>
    </div>
  </div>
</section>

<!-- Table  -->
<section class="justify-center items-center flex">

<table class="w-full md:overflow-x-auto mx-10">
  <thead>
   <tr class="text-gray-500"> 
    <th>#</th>
    <th>Name</th>
    <th>Last</th>
    <th>Buy/ / Sell</th>
    <th>Volume</th>
    <th>Base unit</th>
   </tr> 
  </thead>

  <tbody>
  <% for(let i=0; i<5; i++) { %>
    <tr>
      <td><%= i %></td>
      <td>
      <a class="flex justify-center items-center">
        <!-- <img src="https://assets.coingecko.com/coins/images/1/small/bitcoin.png?1547033579" class="w-8 h-8 rounded-full" alt="bitcoin"> -->
        <span class="ml-2"><%= response[i].name %></span>
      </a>
      </td>
      <td>₹ <%= response[i].last %></td>
      <td>₹ <%= response[i].buy %> / ₹ <%= response[i].sell %></td>
      <td><%= response[i].volume %></td>
      <td> <%= response[i].base_unit %></td>
      <% } %>
  </tbody>
</table>
  
</section>

<%- include("partials/footer") -%>
